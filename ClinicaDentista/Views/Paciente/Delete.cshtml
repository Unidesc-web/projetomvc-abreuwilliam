@model ClinicaDentista.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
}


<h1 class="mb-4">Excluir Paciente</h1>

<h3 class="mb-4">Tem certeza que deseja excluir o paciente <strong>@Model.Nome</strong>?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    
    <div class="form-group">
        <button type="submit" class="btn btn-danger btn-lg">Confirmar Excluir</button>
    </div>

    <div class="form-group">
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancelar</a>
    </div>
</form>
