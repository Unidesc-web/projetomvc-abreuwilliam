@using ClinicaDentista.Models
@model IEnumerable<ClinicaDentista.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}


<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create", "Paciente")" class="btn btn-primary">Cadastrar novo paciente</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.CPF</td>
            <td>@item.Telefone</td>
            <td>
                <a href="@Url.Action("Edit", "Paciente", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                <a href="@Url.Action("Delete", "Paciente", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este paciente?');">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
