@model ClinicaDentista.Models.Agendamento
@using Microsoft.AspNetCore.Mvc.ModelBinding

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Erro!</strong> Um ou mais campos são inválidos.
    </div>
}


<form asp-action="Create">
    <div class="form-group">
        <label for="PacienteId">Paciente</label>
        <select asp-for="PacienteId" class="form-control" asp-items="@(ViewBag.Pacientes as SelectList)"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
<div class="form-group">
    <label asp-for="DataHora" class="control-label"></label>
    <input asp-for="DataHora" class="form-control" type="datetime-local" />
    <span asp-validation-for="DataHora" class="text-danger"></span>
</div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Confirmado">Confirmado</option>
            <option value="Cancelado">Cancelado</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
