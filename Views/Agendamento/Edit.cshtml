@model ClinicaDentista.Models.Agendamento

<h2>Editar Agendamento</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DataHora"></label>
        <input asp-for="DataHora" class="form-control" />
        <span asp-validation-for="DataHora" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PacienteId">Paciente</label>
        <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-control"></select>
        <span asp-validation-for="PacienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>
