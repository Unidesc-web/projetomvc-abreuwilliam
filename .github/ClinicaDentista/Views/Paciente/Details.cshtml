@model IEnumerable<ClinicaDentista.Models.Paciente>

<h2>Lista de Pacientes</h2>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nome</td>
                <td>@paciente.CPF</td>
                <td>@paciente.Telefone</td>
                <td>@paciente.DataNascimento.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
